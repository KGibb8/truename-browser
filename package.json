{
  "name": "truename",
  "version": "1.0.0",
  "description": "A secret sharing application",
  "main": "app/index.js",
  "license": "MIT",
  "repository": "kgibb8/truename",
  "scripts": {
    "build": "browserify -t [ babelify --presets [ react ] ] app/index.js -o build/app.js",
    "export": "browserify -t [ babelify --presets [ react ] ] app/index.js | indexhtmlify --style assets/stylesheets/app.global.css --title 'True Name' > index.html",
    "open": "open index.html || xdg-open index.html",
    "start": "npm run build && npm run open"
  },
  "dependencies": {
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.24.1",
    "babel-register": "^6.3.13",
    "babelify": "^8.0.0",
    "browserify": "^16.1.1",
    "classnames": "^2.2.5",
    "lodash": "^4.17.5",
    "qrcode.react": "^0.8.0",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-router-dom": "^4.2.2",
    "secrets.js": "^0.1.8",
    "xtend": "^4.0.1"
  },
  "devDependencies": {
    "font-awesome": "^4.7.0"
  }
}
